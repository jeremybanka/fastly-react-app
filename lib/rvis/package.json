{
  "name": "rvis",
  "version": "0.1.0",
  "description": "React components for data visualization",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/signalsciences/rvis.git"
  },
  "author": "Signal Sciences",
  "browserslist": [
    "extends browserslist-config-signalsciences"
  ],
  "keywords": [
    "react",
    "datavis",
    "charts",
    "timeseries"
  ],
  "homepage": "https://github.com/signalsciences/rvis",
  "bugs": {
    "url": "https://github.com/signalsciences/rvis/issues"
  },
  "license": "MIT",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "main": "dist/index.js",
  "module": "dist/rvis.esm.js",
  "scripts": {
    "dev": "yarn start",
    "test": "jest ./test",
    "test:watch": "jest ./test --watch",
    "start": "cross-env NODE_ENV=development rollup -c --watch",
    "build": "cross-env NODE_ENV=production rollup -c",
    "prebuild": "rimraf dist",
    "prepublish": "yarn run build",
    "format": "prettier --write '{docs,examples,src,test,website}/**/*.{js,md}' './*.{js,md}'",
    "lint-staged": "lint-staged",
    "lint": "flow && eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "babel": {
    "presets": [
      "babel-preset-signalsciences"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-signalsciences"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "preset": "jest-preset-signalsciences",
    "testEnvironment": "jest-environment-jsdom-sixteen"
  },
  "dependencies": {
    "@visx/axis": "^1.3.0",
    "@visx/brush": "^1.3.0",
    "@visx/event": "^1.3.0",
    "@visx/grid": "^1.3.0",
    "@visx/group": "^1.0.0",
    "@visx/legend": "^1.3.0",
    "@visx/pattern": "^1.1.0",
    "@visx/responsive": "^1.3.0",
    "@visx/scale": "^1.3.0",
    "@visx/shape": "^1.3.0",
    "@visx/text": "^1.3.0",
    "d3-array": "^2.9.1"
  },
  "peerDependencies": {
    "react": "react@^15.0.0-0 || ^16.0.0-0",
    "react-dom": "react@^15.0.0-0 || ^16.0.0-0"
  },
  "devDependencies": {
    "@babel/core": "7.12.9",
    "@testing-library/react": "11.2.2",
    "babel-preset-signalsciences": "4.0.5",
    "browserslist-config-signalsciences": "1.0.4",
    "core-js": "^3.8.0",
    "cross-env": "7.0.2",
    "eslint": "7.14.0",
    "eslint-config-signalsciences": "4.0.5",
    "flow-bin": "0.133.0",
    "husky": "4.3.0",
    "jest": "26.6.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-preset-signalsciences": "4.0.5",
    "lint-staged": "10.5.2",
    "pre-commit": "1.2.2",
    "prettier": "2.2.0",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.3",
    "rollup-config-signalsciences": "4.0.6"
  }
}
